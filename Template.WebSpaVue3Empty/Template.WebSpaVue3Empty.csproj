<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <ImplicitUsings>false</ImplicitUsings>
    <Nullable>false</Nullable>
    <Authors>Hannes Morgenthaler</Authors>
    <ContentTargetFolders>content</ContentTargetFolders>
    <Description>New empty ASP.NET Core 6 Template with Vue 3 SPA.</Description>
    <EnableDefaultContentItems>false</EnableDefaultContentItems>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <IncludeContentInPack>true</IncludeContentInPack>
    <IsPackable>true</IsPackable>
    <NoWarn>$(NoWarn);NU5128</NoWarn>
    <PackageId>Template.WebSpaVue3Empty</PackageId>
    <PackageTags>dotnet-new;templates;vue;vue3</PackageTags>
    <PackageType>Template</PackageType>
    <PackageVersion>1.0</PackageVersion>
    <TargetFramework>net6.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <!-- Multiple spa-apps are possible - NOTE: the trailing backslash! -->
    <SpaRoot Include="ClientApp\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Mumrich.SpaDevMiddleware" Version="1.3.0-alpha.6" />
  </ItemGroup>

</Project>