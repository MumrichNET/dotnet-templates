{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "ReverseProxy": {
    "Clusters": {
      "spa-cluster": {
        "Destinations": {
          "spa-clusterdestination": {
            "Address": "http://localhost:3000/"
          }
        }
      }
    },
    "Routes": {
      "SpaRoot": {
        "ClusterId": "spa-cluster",
        "AuthorizationPolicy": "Default",
        "CorsPolicy": "Default",
        "Match": {
          "Path": "/{filename:regex(^.+\\..+$)?}"
        }
      },
      "SpaAssets": {
        "ClusterId": "spa-cluster",
        "AuthorizationPolicy": "Default",
        "Match": {
          "Path": "/{name:regex(^(src|node_modules|@vite|@id)$)}/{**any}"
        }
      }
    }
  }
}
